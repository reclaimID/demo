!!!
%html
  %div{:class => "page"}
    %div{:class => "header"}
      %span{:class=>"title"} #{locals[:title]}
      %div{:class => "right"}
        %span User:
        %br
        %span #{locals[:user].nil? ?  "Anonymous" : locals[:user]}
    %div{:class => "content"}
      = yield
:css
  body {margin: 0;}
  div.page {
    border-radius: 0px;
    //padding: 2px;
  }
  div.header {
    color: white;
    background-color: #555;
    border: 1px solid #fff;
    border-radius: 0px;
    border-bottom:none;
    padding: 1em;
    margin-bottom: 1em;
  }
  .header span.title {
    font-size: 2em;
  }
  .right {
    float: right;
  }
  div.content {
    margin: 1em;
    min-height: 10em;
    padding: 2px;
  }
  .button {
    background: #555;
      background-image: -webkit-linear-gradient(top, #666, #555);
      background-image: -moz-linear-gradient(top, #666, #555);
      background-image: -ms-linear-gradient(top, #666, #555);
      background-image: -o-linear-gradient(top, #666, #555);
      background-image: linear-gradient(to bottom, #666, #555);
      -webkit-border-radius: 4;
      -moz-border-radius: 4;
      border-radius: 0px;
      font-family: Arial;
      color: #ffffff;
      font-size: 16px;
      padding: 10px 20px 10px 20px;
      text-decoration: none;
      border:none;
      display: inline-block;
      margin-bottom: 0.5em;
      width: 5em;
  }

  input.entry {
      height: 2em;
      font-size: 1em;
      border-radius: 0px;
      border: 1px solid rgb(85, 85, 85);
  }

  .button:hover {
    background: #555;
    background-image: -webkit-linear-gradient(top, #555, #444);
    background-image: -moz-linear-gradient(top, #555, #444);
    background-image: -ms-linear-gradient(top, #555, #444);
    background-image: -o-linear-gradient(top, #555, #444);
    background-image: linear-gradient(to bottom, #555, #444);
    text-decoration: none;
  }
  .button img { vertical-align: middle; width: 2em; height: 2em; }
  .col-2 { width: 45%; display: inline-block; vertical-align: top; }

