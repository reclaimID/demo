%html
  %div{:class => "page"}
    %div{:class => "header"}
      %span{:class=>"title"} #{locals[:title]}
      %div{:class => "right"}
        - if !locals[:user].nil?
          %a{:class => "button big", :style => "border: 1px solid #111;", :href => "/logout"} Logout
        - if locals[:user].nil?
          %a{:class => "button big", :href => "#{locals[:reclaimEndpoint]}/openid/authorize?redirect_uri=https://demo.#{locals[:demo_pkey]}/login&client_id=#{locals[:demo_pkey]}&response_type=code&scope=openid%20email%20full_name&nonce=#{locals[:nonce]}"}
            <span style="font-family: Audiowide">re</span><span style="font-family: Helvetica Neue">:claimID</span>


      %div{:class => "right"}
        %span User:
        %br
        %span #{locals[:user].nil? ?  "Anonymous" : locals[:user]}
    %div{:class => "content"}
      = yield
:css
  body {
    margin: 0;
    font-family: Arial, Helvetica, sans-serif;
  }
  div.page {
    border-radius: 0px;
    //padding: 2px;
  }
  div.header {
    color: white;
    background-color: #555;
    border: 1px solid #fff;
    border-radius: 0px;
    border-bottom:none;
    padding: 1em;
    margin-bottom: 1em;
  }
  .header span.title {
    font-size: 2em;
  }
  .right {
    margin-left: 1em;
    float: right;
  }
  div.content {
    margin: 1em;
    min-height: 10em;
    padding: 2px;
  }
  .button {
    background: #555;
    border-radius: 10em;
    font-family: Arial;
    color: #ffffff;
    padding: 10px 20px 10px 20px;
    text-decoration: none;
    border:none;
    display: inline-block;
    margin-bottom: 0.5em;
  }

  .button.reclaim {
    background: #fff;
    color: #111;
    font-size: 1.25em;
    border: 1px solid #ddd;
  }

  .button.reclaim:hover {
    background: #555;
    color: #eee;
  }

  input.entry {
      height: 2em;
      font-size: 1em;
      border-radius: 0px;
      border: 1px solid rgb(85, 85, 85);
  }

  .button:hover {
    background: #555;
    background-image: -webkit-linear-gradient(top, #555, #444);
    background-image: -moz-linear-gradient(top, #555, #444);
    background-image: -ms-linear-gradient(top, #555, #444);
    background-image: -o-linear-gradient(top, #555, #444);
    background-image: linear-gradient(to bottom, #555, #444);
    text-decoration: none;
  }
  .button img { vertical-align: middle; width: 2em; height: 2em; }
  .col-2 { width: 45%; display: inline-block; vertical-align: top; }

