!!!
%html
  %div{:class => "page"}
    %div{:class => "header"}
      %span{:class=>"title"} #{locals[:title]}
      %div{:class => "right"}
        - if !locals[:user].nil?
          %a{:class => "button big", :style => "border: 1px solid #111;", :href => "/logout"} Logout
      %div{:class => "right"}
        %span User:
        %br
        %span #{locals[:user].nil? ?  "Anonymous" : locals[:user]}
    %div{:class => "content"}
      = yield
:css
  body {
    margin: 0;
    font-family: Arial, Helvetica, sans-serif;
  }
  div.page {
    border-radius: 0px;
    //padding: 2px;
  }
  div.header {
    color: white;
    background-color: #555;
    border: 1px solid #fff;
    border-radius: 0px;
    border-bottom:none;
    padding: 1em;
    margin-bottom: 1em;
  }
  .header span.title {
    font-size: 2em;
  }
  .right {
    margin-left: 1em;
    float: right;
  }
  div.content {
    margin: 1em;
    min-height: 10em;
    padding: 2px;
  }
  .button {
    background: #555;
    border-radius: 10em;
    font-family: Arial;
    color: #ffffff;
    padding: 5px 20px 5px 20px;
    text-decoration: none;
    border: 1px solid #333;
    background-image: linear-gradient(to bottom, #555, #444);
    display: inline-block;
    margin: 0.5em;
  }

  .button.reclaim {
    background: #fff;
    color: #111;
    font-size: 1.5em;
    border: 1px solid #ddd;
    box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.5);
  }

  .button.reclaim:hover {
    background-color: #fff;
    border: 1px solid #eee;
  }

  .button img {
    vertical-align: middle;
    width: 5em;
    margin: 5px;
  }

  input.entry {
      height: 2em;
      font-size: 1em;
      border-radius: 0px;
      border: 1px solid rgb(85, 85, 85);
  }

  .button:hover {
    background: #111;
    text-decoration: none;
  }
  .col-2 { width: 45%; display: inline-block; vertical-align: top; }

